%h2 Login

= form_for(resource, :as => resource_name, :url => session_path(resource_name),
    :html => {:class => "login-form"}) do |f|
  %fieldset.inputs
    %ol
      %li
        = f.label :email
        = f.text_field :email
      %li
        = f.label :password
        = f.password_field :password
      - if devise_mapping.rememberable?
        %li
          = f.check_box :remember_me
          = f.label :remember_me, "Remember me on this computer"
  %fieldset.buttons
    %ol
      %li
        = f.submit "Login"
  %ul
    = render :partial => "devise/shared/links"

%h2 Or sign in with
%ul#alt-auth
  %li
    = link_to auth_path(:twitter) do
      = image_tag "twitter_64.png", :size => "64x64", :alt => "Twitter logo"
      Twitter
  %li
    = link_to auth_path(:open_id) do
      = image_tag "openid_64.png", :size => "64x64", :alt => "OpenID logo"
      OpenID
